@{
    ViewBag.Title = "Home Page";
}

@model ZoomScraper.Models.InstructionsEdit


    <h2>Instructions</h2><br />
    @using (Html.BeginForm(FormMethod.Post))
    {
        <input type="submit" value="Change Table" formaction="@Url.Action("Change", "Home")" />
        <input type="submit" value="Forms" formaction="@Url.Action("Forms", "Home")" />
        <input type="submit" value="Instructions" formaction="@Url.Action("Instructions", "Home")" />
    }


    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddorEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <br />
                <div class="form-group">
                    <select>
                        <option>IEC</option>
                        <option>Visitor Visa</option>
                    </select>
                 </div>
                <div class="form-group">
                    <label>Instuction Type</label>
                    <input asp-for="Instruction_type" class="form-control" />
                    <span asp-validation-for="Instruction_type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Instruction Value</label>
                    <input asp-for="Instuction_value" class="form-control" />
                    <span asp-validation-for="Instuction_value" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
    
